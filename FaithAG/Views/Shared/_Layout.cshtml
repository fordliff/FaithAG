                    <img src="~/Images/Logo.png" style="height:70px; width:70px;" title="Faith A/G" alt="Faith A/G" />
                </a>
                @Html.ActionLink("FAITH A/G, Ksi", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "font-size:x-large; font-weight:bolder;color:yellow;  margin-top:16px;" })

